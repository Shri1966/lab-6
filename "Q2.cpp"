#include <iostream>
using namespace std;

int main()
{
  cout<<"Program to understand the concepts of pointer";
  int x=0,y=0;
  int *p;
  p=&x;
  y=*p;
  cout<<"\n \nValue of \"x\" is: "<<x;
  cout<<"\nValue of \"y\" is: "<<y;
  cout<<"\nValue of *p is: "<<p;
  x=2;
  y=3;
  cout<<"\n \nValue of \"x\" is: "<<x;
  cout<<"\nValue of \"y\" is: "<<y;
  cout<<"\nValue of *p is: "<<p;
  p=&y;
  cout<<"\n \nValue of \"x\" is: "<<x;
  cout<<"\nValue of \"y\" is: "<<y;
  cout<<"\nValue of *p is: "<<p;
  return 0;
}
